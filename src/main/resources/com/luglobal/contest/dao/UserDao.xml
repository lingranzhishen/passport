<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.luglobal.contest.dao.UserDao" >
  <resultMap id="BaseResultMap" type="com.luglobal.contest.model.UserDTO" >
    <result column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="mobile" property="mobile" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="role" property="role" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    user_id, username, mobile, password, create_time,role
  </sql>
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" >
    select 
    <include refid="Base_Column_List" />
    from tb_user
    where user_id = #{userId}
  </select>


  <insert id="insert" parameterType="com.luglobal.contest.model.UserDTO" >
    insert into tb_user (user_id, username, mobile, password,create_time)
    values (#{userId},#{username},#{mobile},#{password},#{createTime})
  </insert>
  <update id="updateByPrimaryKey" parameterType="com.luglobal.contest.model.UserDTO" >
    update tb_user
    set username = #{username},
      mobile = #{mobile},
      password = #{password},
      create_time = #{createTime}
    where user_id = #{userId}
  </update>

  <select id="findByUserName" resultMap="BaseResultMap" parameterType="com.luglobal.contest.model.UserDTO" >
    select
    <include refid="Base_Column_List" />
    from tb_user
    where username = #{username}
  </select>
</mapper>